modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["arrow-cpp", "freetype", "gcc", "gcc-unwrapped", "glibc", "glibcLocales", "libcxx", "libgcc", "libgccjit", "libstdcxx5", "libxcrypt", "postgresql", "zlib", "chromium"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BIPV Optimizer"

[[workflows.workflow]]
name = "BIPV Optimizer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[agent]
integrations = ["flask_supabase==1.0.0", "perplexity_v0==1.0.0", "web_scraper==1.0.0"]
