modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["gcc", "gcc-unwrapped", "glibc", "glibcLocales", "libgcc", "libstdcxx5", "libcxx", "libgccjit"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Dependencies"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BIPV Working Version"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BIPV Dependency Fixed"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BIPV Optimizer"

[[workflows.workflow]]
name = "Test Dependencies"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app_minimal_test.py --server.port 5001"
waitForPort = 5001

[[workflows.workflow]]
name = "BIPV Working Version"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app_working_minimal.py --server.port 5002"
waitForPort = 5002

[[workflows.workflow]]
name = "BIPV Dependency Fixed"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app_dependency_fixed.py --server.port 5003"
waitForPort = 5003

[[workflows.workflow]]
name = "BIPV Optimizer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app_dependency_fixed.py --server.port 5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 5002
externalPort = 3001

[[ports]]
localPort = 5003
externalPort = 3002
