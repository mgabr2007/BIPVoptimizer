modules = ["python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["gcc", "gcc-unwrapped", "glibc", "glibcLocales", "libcxx", "libgcc", "libgccjit", "libstdcxx5", "zlib"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BIPV Optimizer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Message Test"

[[workflows.workflow]]
name = "BIPV Optimizer"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Message Test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run test_messages.py --server.port 5001"
waitForPort = 5001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 5002
externalPort = 3001

[[ports]]
localPort = 5003
externalPort = 3002
